      "parameters": {
        "jsCode": "// Prepare success response\nconst stripeResponse = $json;\n\nif (stripeResponse.error) {\n  return {\n    success: false,\n    error: stripeResponse.error.message || 'Erreur Stripe'\n  };\n}\n\nreturn {\n  success: true,\n  checkout_url: stripeResponse.url,\n  session_id: stripeResponse.id\n};"
